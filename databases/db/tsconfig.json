{
  "compilerOptions": {
    // Basic
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "verbatimModuleSyntax": false,
    "allowJs": false,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,

    // Compiler
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "dist"
  }
}
